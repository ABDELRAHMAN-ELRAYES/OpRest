generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String @id @default(uuid())
  email           String @unique
  password        String?
  name            String
  birthDate       String?
  profilePicture String @default("https://abs.twimg.com/sticky/default_profile_images/default_profile_400x400.png")
  role            String @default("user")

  @@index([email])
}
